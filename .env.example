# Firebase Admin credentials (Service Account). Create one in:
# Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# IMPORTANT:
# If you paste a JSON private key, keep it QUOTED and with literal "\n" for newlines.
# Example:
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEv...\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEv...\n-----END PRIVATE KEY-----\n"

# App
PORT=3000
DATABASE_URL=./data.sqlite

# Simulated Service knobs (Commit 2)
# Artificial latency in milliseconds (e.g., 400)
SIM_DELAY_MS=0
# Random error rate between 0 and 1 (e.g., 0.1 for 10% errors)
SIM_ERROR_RATE=0
